using System;

public class Employee
{
    private string _name;
    private double _salary;

    public string Name
    {
        get { return _name; }
        set { _name = value; }
    }

    public double Salary
    {
        get { return _salary; }
        set
        {
            if (value >= 0 && value <= 1000000)
            {
                _salary = value;
            }
            else
            {
                Console.WriteLine("Зарплата не может быть отрицательной или превышать 1,000,000!");
                _salary = 0;
            }
        }
    }

    public Employee(string name, double salary)
    {
        Name = name;
        Salary = salary;
    }

    public Employee(string name) : this(name, 50000)
    {
    }

    public void Work()
    {
        Console.WriteLine($"«{Name} работает, зарплата: {Salary}»");
    }
}

public class Program
{
    public static void Main(string[] args)
    {
        Employee employee1 = new Employee("Иван", 80000);
        employee1.Work();

        Employee employee2 = new Employee("Анна");
        employee2.Work();

        Employee employee3 = new Employee("Петр", -1000);
        employee3.Work();

        Employee employee4 = new Employee("Мария", 1500000);
        employee4.Work();
    }
}
